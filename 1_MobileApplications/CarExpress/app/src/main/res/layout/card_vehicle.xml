<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:foregroundGravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:cardElevation="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivcVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/desc"
                app:srcCompat="@drawable/bg">
            </ImageView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_weight="1">
            </Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPower"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableStart="@mipmap/ic_powerf"
                        android:gravity="center"
                        android:textAlignment="textStart"
                        android:textSize="18sp"
                        card_view:ignore="RtlCompat">
                    </TextView>

                    <TextView
                        android:id="@+id/tvFuel"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableStart="@mipmap/ic_fuelf"
                        android:gravity="center"
                        android:textAlignment="textStart"
                        android:textSize="18sp"
                        card_view:ignore="RtlCompat">
                    </TextView>

                    <TextView
                        android:id="@+id/tvId"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableStart="@mipmap/ic_idf"
                        android:gravity="center"
                        android:textAlignment="textStart"
                        android:textSize="18sp"
                        card_view:ignore="RtlCompat">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGearbox"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableStart="@mipmap/ic_gearboxf"
                        android:gravity="center"
                        android:textAlignment="textStart"
                        android:textSize="18sp"
                        card_view:ignore="RtlCompat">
                    </TextView>

                    <TextView
                        android:id="@+id/tvConsumption"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableStart="@mipmap/ic_consf"
                        android:gravity="center"
                        android:textAlignment="textStart"
                        android:textSize="18sp"
                        card_view:ignore="RtlCompat">
                    </TextView>

                    <TextView
                        android:id="@+id/tvCentre"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableStart="@mipmap/ic_centref"
                        android:gravity="center"
                        android:textAlignment="textStart"
                        android:textSize="18sp"
                        card_view:ignore="RtlCompat">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTrunk"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableStart="@mipmap/ic_trunkf"
                        android:gravity="center"
                        android:textAlignment="textStart"
                        android:textSize="18sp"
                        card_view:ignore="RtlCompat">
                    </TextView>

                    <TextView
                        android:id="@+id/tvDoors"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableStart="@mipmap/ic_doorsf"
                        android:gravity="center"
                        android:textAlignment="textStart"
                        android:textSize="18sp"
                        card_view:ignore="RtlCompat">
                    </TextView>

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/text_color_primary"
                        android:textSize="24sp">
                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bRent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bRent">
                </Button>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_weight="1">
            </Space>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>